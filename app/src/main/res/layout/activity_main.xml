<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_pause"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintLeft_toLeftOf="@id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start"
        app:layout_constraintLeft_toLeftOf="@id/sv"
        app:layout_constraintBottom_toBottomOf="@id/sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seek"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"
        app:layout_constraintLeft_toRightOf="@id/btn_start"
        app:layout_constraintRight_toRightOf="@id/sv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>